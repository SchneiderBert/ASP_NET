@{
    ViewData["Title"] = "Home Page";
}
@model User

<h1 id="welcome" class="text-center mt-4">Welcome To Dojo Connect</h1>

<div class="text-center mt-4 login_reg mb-4">
    <div class="row">
        <div class="col-sm-5">
            <form class="border border-dark p-4" asp-action="Register" method="post">
                <h2 class="text-center blockquote">Register</h2>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Alias"></label>
                    <input asp-for="Alias" class="form-control">
                    <span class="text-danger" asp-validation-for="Alias"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control">
                    <small>Password must be 8 characters</small>
                    <br>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Confirm"></label>
                    <input asp-for="Confirm" class="form-control">
                    <span class="text-danger" asp-validation-for="Confirm"></span>
                </div>
            <input class="btn btn-warning" type="submit" value="Register">
            </form>
        </div>
        <div class="col-sm-2"></div>
        <div class="col-sm-5">
            <partial name="_Login"></partial>
        </div>

    </div>
</div>
